@page "/"

<PageTitle>Home</PageTitle>

<div class="home-page" style="display: flex; justify-content: center; align-items: center; height: 90vh; background: linear-gradient(to bottom right, #e0f7fa, #ffffff); padding: 2rem;">
    <div class="welcome-card shadow-lg" style="background-color: white; border-radius: 20px; padding: 3rem 2.5rem; max-width: 600px; width: 100%; text-align: center;">
        
        <h1 class="welcome-heading" style="font-size: 2.5rem; font-weight: bold; color: #333;">
            <span class="emoji">🌤️</span>
            <span class="welcome-heading-text"> Welcome to <span style="color: #1976d2;">Blazor Weather App</span> </span>
            <span class="emoji">☀️</span>
        </h1>

        <hr class="my-4" style="border-top: 2px solid #ccc; width: 60%; margin: 2rem auto;" />

        <h3 class="city-gradient-text text-center" style="font-size: 1.25rem; color: #555; margin-bottom: 2rem;">
            Enter a city name to check its current weather conditions.
        </h3>

        <a href="/weather" class="btn btn-lg btn-primary" style="padding: 0.75rem 2rem; font-size: 1.2rem; border-radius: 12px;">
            🔍 Check Weather
        </a>
    </div>
</div>